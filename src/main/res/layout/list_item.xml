<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

        <ImageView
                android:id="@+id/imageTR"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/bus"
        />


        <TextView
                android:id="@+id/transportName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:text="25"
                android:layout_toEndOf="@+id/imageTR"
                android:layout_toRightOf="@+id/imageTR"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="18sp"/>

        <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/transportName"
                android:layout_toRightOf="@+id/transportName"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="ул. Лобанка"/>


        <TextView
                android:id="@+id/msgtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/location"
                android:layout_toRightOf="@+id/location"
                android:textSize="18sp"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:textStyle="bold"
                android:text="8:35"
        />


    </RelativeLayout>


</LinearLayout>